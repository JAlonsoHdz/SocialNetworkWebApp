<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
		"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
		"http://struts.apache.org/dtds/struts-2.0.dtd">  
<struts>
	<package name = "AccountSystem" extends = "struts-default">
		<action name = "login" class = "com.alonso.socialnetworks.action.LoginAction">	
			<result name = "success">/loginSuccess.jsp</result>
			<result name = "input">/index.jsp</result>
		</action>
		
		<action name = "register" class = "com.alonso.socialnetworks.action.RegisterAction">	
			<result name = "success">/index.jsp</result>
			<result name = "input">/register.jsp</result>
		</action>
	</package>
	
	<package name = "FriendSystem" extends = "struts-default">
		<action name = "addFriend" class = "com.alonso.socialnetworks.action.AddFriendsAction">	
			<result name = "success">/loginSuccess.jsp</result>
			<result name = "input">/loginSuccess.jsp</result>
		</action>
	</package>
</struts>